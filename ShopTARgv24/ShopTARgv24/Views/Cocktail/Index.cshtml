@model ShopTARgv24.Models.Cocktails.CocktailViewModel

@{
    ViewData["Title"] = "Cocktail Data";
}

<h1 class="display-4">@ViewData["Title"]</h1>
<p>Это "голые" данные (raw JSON), полученные от API.</p>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-controller="Cocktails" asp-action="Index" method="get">
            <div class="input-group mb-3">
                <input type="text" name="searchTerm" class="form-control"
                       placeholder="Enter cocktail name" value="@Model.SearchTerm">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-12">
        <p><strong>Result for "@Model.SearchTerm":</strong></p>
        <pre style="background-color: #f0f0f0; border: 1px solid #ccc; padding: 10px; white-space: pre-wrap; word-wrap: break-word;">
        <code>
@Model.RawData
            </code>
        </pre>
    </div>
</div>
