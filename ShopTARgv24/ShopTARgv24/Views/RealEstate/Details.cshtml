@model ShopTARgv24.Models.RealEstates.RealEstateDetailsViewModel

<h1>Details</h1>

<div>
    <h4>Real Estate</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label">ID</label>
            @Html.DisplayFor(Model => Model.Id)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="Area" class="col-sm-2 col-form-label">Area</label>
            @Html.DisplayFor(Model => Model.Area)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="Location" class="col-sm-2 col-form-label">Location</label>
            @Html.DisplayFor(Model => Model.Location)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="RoomNumber" class="col-sm-2 col-form-label">Room Number</label>
            @Html.DisplayFor(Model => Model.RoomNumber)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="BuildingType" class="col-sm-2 col-form-label">Building Type</label>
            @Html.DisplayFor(Model => Model.BuildingType)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="CreatedAt" class="col-sm-2 col-form-label">Created At</label>
            @Html.DisplayFor(Model => Model.CreatedAt)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="ModifiedAt" class="col-sm-2 col-form-label">Modified At</label>
            @Html.DisplayFor(Model => Model.ModifiedAt)
        </div>
    </dl>

    @if (Model.Image != null && Model.Image.Any())
{
    <div>
        @foreach (var photo in Model.Image)
        {
            <div style="margin-bottom: 15px;">
                <img src="@photo.Image" alt="@photo.ImageTitle" style="max-width: 300px;" />
                <p>@photo.ImageTitle</p>
            </div>
        }
    </div>
}
else
{
    <p>No photos available.</p>
}

    <a asp-action="index" asp-controller="realestate" class="btn btn-primary">Back</a>
</div>