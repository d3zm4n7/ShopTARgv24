@model ShopTARgv24.Models.RealEstates.RealEstateCreateUpdateViewModel


@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}



<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="Area" class="col-sm-2 col-form-label">Area</label>
            <div class="col-sm-10">
                <input asp-for="Area" class="form-control" type="number"/>
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            
        </div>

        <div class="form-group row">
            <label asp-for="Location" class="col-sm-2 col-form-label">Location</label>
            <div class="col-sm-10">
                <input asp-for="Location" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="RoomNumber" class="col-sm-2 col-form-label">Room Number</label>
            <div class="col-sm-10">
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>
            
        </div>

        <div class="form-group row">
            <label asp-for="BuildingType" class="col-sm-2 col-form-label">Building Type</label>
            <div class="col-sm-10">
                <input asp-for="BuildingType" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Files" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Files" class="form-control" multiple type="file" />
                </div>
            </div>
        </div>
        <div>
        @foreach (var images in Model.Image)
        {
            <div class="d-flex align-items-center mb-3">
                <partial name="_Images" model="images" />
                    <input asp-action="removeImage" asp-controller="realestate" asp-route-imageId="@images.Image"
                        type="submit" class="btn btn-danger ms-3" value="Delete" />
            </div>
        }
        </div>
        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="realestate" type="submit" class="btn btn-primary" value="Update" />
        }
        else
        {
            <input asp-action="create" asp-controller="realestate" type="submit" class="btn btn-primary" value="Create" />
        }
        <a asp-action="Index" asp-controller="realestate" class="btn btn-success">Back</a>

    </form>
</div>